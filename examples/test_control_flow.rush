# Test Phase 3 control flow features

# Basic if/else
x = 10
if (x > 5) {
    result = "x is greater than 5"
} else {
    result = "x is not greater than 5"
}

# Boolean logic operators
a = true
b = false
andResult = a && b
orResult = a || b
notResult = !a

# Nested conditions
score = 85
if (score >= 90) {
    grade = "A"
} else {
    if (score >= 80) {
        grade = "B"
    } else {
        grade = "C"
    }
}

# Complex boolean expressions
age = 25
hasLicense = true
canDrive = (age >= 16) && hasLicense

# Final result should be the grade
finalResult = grade